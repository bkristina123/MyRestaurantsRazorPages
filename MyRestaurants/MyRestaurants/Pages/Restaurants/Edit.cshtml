@page "{id:int?}"
@model MyRestaurants.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Editing @Model.Restaurant.Name</h1>

<form method="post">

    <input type="hidden" asp-for="Restaurant.Id" />

    <div class="form-group">
        <label asp-for="Restaurant.Name">Restaurant Name</label>
        <input asp-for="Restaurant.Name" class="form-control">
        <span asp-validation-for="Restaurant.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Location">Restaurant Location</label>
        <input asp-for="Restaurant.Location" class="form-control">
        <span asp-validation-for="Restaurant.Location"></span>

    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Cuisine">Restaurant Cuisine</label>
        <select class="form-control" asp-for="Restaurant.Cuisine"
                asp-items="Model.Cuisines">
        </select>
    </div>
    <button class="btn btn-warning" type="submit">
        Save
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}